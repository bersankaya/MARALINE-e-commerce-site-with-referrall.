@page
@model AlisverisSitesiFinal.Areas.Identity.Pages.Account.LoginModel
@inject IConfiguration Configuration
@{
    ViewData["Title"] = "Giriş Yap";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 col-sm-10 col-md-7 col-lg-5">
            <div class="card shadow-sm border-0 rounded-4">
                <div class="card-body p-4">
                    <h1 class="h4 mb-1 text-center fw-bold">Tekrar Hoş Geldiniz</h1>
                    <p class="text-center text-muted mb-4">Hesabınıza giriş yapın</p>

                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
                    {
                        <div class="alert alert-danger rounded-3">Giriş yapılamadı. Lütfen bilgilerinizi kontrol edin.</div>
                    }

                    <form method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="Input.Email" class="form-label"></label>
                            <input asp-for="Input.Email" class="form-control" inputmode="email" autocomplete="email" />
                            <span asp-validation-for="Input.Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.Password" class="form-label"></label>
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" />
                            <span asp-validation-for="Input.Password" class="text-danger small"></span>
                        </div>


                        <input type="hidden" id="g-recaptcha-response" name="g-recaptcha-response" />


                        @* <div class="form-check mb-3">
                            <input asp-for="Input.RememberMe" class="form-check-input" />
                            <label class="form-check-label" asp-for="Input.RememberMe"></label>
                        </div> *@

                        <button class="btn btn-dark w-100 rounded-3 py-2">Giriş Yap</button>

                        <div class="d-flex justify-content-between mt-3 small">
                            <a asp-page="./ForgotPassword">Şifremi unuttum</a>
                            <a asp-page="./Register">Hesabın yok mu? Kayıt ol</a>
                        </div>
                    </form>
                </div>
            </div>

            @* ===== E‑POSTAMI ONAYLAYAMADIM — ŞIK KART ===== *@
            @if (!string.IsNullOrWhiteSpace(Model.ResendStatus))
            {
                <div class="alert alert-info shadow-sm rounded-3 mt-3">@Model.ResendStatus</div>
            }

            <section class="verify-card mt-4">
                <div class="verify-card__header">
                    <div class="verify-card__icon">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
                            <path d="M12 12.713l-11.99-7.2v12.487c0 1.105.895 2 2 2h19.98c1.105 0 2-.895 2-2V5.513l-11.99 7.2zM12 10.487l11.99-7.2H.01l11.99 7.2z" />
                        </svg>
                    </div>
                    <h5 class="mb-0">E‑postamı onaylayamadım</h5>
                </div>

                <div class="verify-card__body">
                    <p class="text-muted mb-3">
                        Kayıtlı ama onayı tamamlanmamış hesabınız için onay e‑postasını tekrar gönderebilirsiniz.
                    </p>

                    <form method="post" asp-page-handler="ResendConfirmation" class="row gy-2 gx-2 align-items-stretch">
                        <div class="col-12 col-md">
                            <label for="resendEmail" class="form-label sr-only">Kayıtlı e‑posta adresiniz</label>
                            <div class="input-group input-group-lg verify-card__input">
                                <span class="input-group-text">
                                    <i class="bi bi-envelope"></i>
                                </span>
                                <input id="resendEmail"
                                       asp-for="ResendEmail"
                                       class="form-control"
                                       placeholder="Kayıtlı e‑posta adresiniz"
                                       autocomplete="email" />
                            </div>
                            <span asp-validation-for="ResendEmail" class="text-danger small"></span>
                        </div>

                        <div class="col-12 col-md-auto d-grid">
                            <button type="submit" class="btn btn-verify">
                                <span class="btn-verify__text">Onay E‑postası Gönder</span>
                            </button>
                        </div>
                    </form>

                    <div class="verify-card__hint mt-2 text-muted small">
                        Mail gelmediyse spam/önemsiz klasörünü kontrol edin.
                    </div>
                </div>
            </section>

        </div>
    </div>
</div>
<script src="https://www.google.com/recaptcha/api.js?render=@Configuration["GoogleReCaptcha:SiteKey"]"></script>
<script>
    grecaptcha.ready(function () {
        grecaptcha.execute('@Configuration["GoogleReCaptcha:SiteKey"]', { action: 'login' })
            .then(function (token) {
                document.getElementById('g-recaptcha-response').value = token;
            });
    });
</script>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
