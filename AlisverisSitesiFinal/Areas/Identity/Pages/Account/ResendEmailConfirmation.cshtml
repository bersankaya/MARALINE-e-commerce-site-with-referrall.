@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "E-posta Onayı";

    var msg = Model.StatusMessage ?? string.Empty;
    bool success = msg.Contains("doğrulandı", StringComparison.OrdinalIgnoreCase)
                || msg.Contains("başarıyla", StringComparison.OrdinalIgnoreCase)
                || msg.Contains("teşekkür", StringComparison.OrdinalIgnoreCase);
}

<div class="container my-5">
    <div class="card border-0 shadow-lg rounded-4 mx-auto text-center" style="max-width: 520px;">
        <div class="card-body py-5">
            <div class="mb-3">
                <i class="bi @(success ? "bi-check-circle-fill text-success" : "bi-x-circle-fill text-danger")"
                   style="font-size: 3rem;"></i>
            </div>

            <h2 class="fw-semibold mb-3">@ViewData["Title"]</h2>

            <p class="text-muted mb-4">
                @(string.IsNullOrWhiteSpace(msg)
                                ? "E-posta onay işlemi tamamlandı."
                                : msg)
            </p>

            @if (success)
            {
                <div class="alert alert-success mx-auto" style="max-width: 420px;">
                    E-posta adresiniz başarıyla doğrulandı. Artık giriş yapabilirsiniz.
                </div>
            }
            else
            {
                <div class="alert alert-danger mx-auto" style="max-width: 420px;">
                    E-posta doğrulama işlemi başarısız oldu. Lütfen bağlantının süresi dolmadığından emin olun.
                </div>
            }

            <div class="mt-4 d-flex flex-column flex-sm-row justify-content-center gap-2">
                <a class="btn btn-success px-4" asp-area="Identity" asp-page="/Account/Login">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Giriş Yap
                </a>
                <a class="btn btn-outline-primary px-4" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-house-door me-1"></i> Ana Sayfa
                </a>
            </div>
        </div>
    </div>
</div>
