@page
@model ConfirmEmailChangeModel
@{
    ViewData["Title"] = "E-posta Değişikliği Onayı";

    var raw = Model.StatusMessage ?? string.Empty;

    string message =
        raw.Contains("Thank you for confirming your email change.", StringComparison.OrdinalIgnoreCase)
            ? "E-posta adresiniz başarıyla güncellendi."
        : raw.Contains("Error changing email.", StringComparison.OrdinalIgnoreCase)
            ? "E-posta değiştirme işlemi sırasında bir hata oluştu."
        : string.IsNullOrWhiteSpace(raw)
            ? "E-posta değişikliği işlemi tamamlandı."
            : raw;

    bool isSuccess = message.Contains("başarıyla", StringComparison.OrdinalIgnoreCase)
                  || message.Contains("tamamlandı", StringComparison.OrdinalIgnoreCase);
}

<div class="container py-4">
    <h1 class="h3 mb-3">@ViewData["Title"]</h1>

    <div class="alert @(isSuccess ? "alert-success" : "alert-danger")" role="alert">
        @message
    </div>

    <div class="mt-3">
        <a asp-page="/Account/Manage/Index" class="btn btn-primary btn-sm">Hesabım</a>
        <a asp-page="/Account/Login" class="btn btn-outline-secondary btn-sm">Giriş Yap</a>
    </div>
</div>
