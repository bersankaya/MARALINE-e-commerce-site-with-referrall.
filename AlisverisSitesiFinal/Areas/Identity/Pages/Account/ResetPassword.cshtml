@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Şifre Sıfırlama";
}

<div class="container my-5">
    <div class="card border-0 shadow-lg rounded-4 mx-auto" style="max-width: 520px;">
        <div class="card-body p-4 p-md-5">
            <div class="text-center mb-3">
                <i class="bi bi-key-fill" style="font-size: 2.5rem;"></i>
            </div>
            <h1 class="h4 text-center mb-1">@ViewData["Title"]</h1>
            <p class="text-muted text-center mb-4">Şifrenizi aşağıdaki formdan yenileyin.</p>

            <form method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small" role="alert"></div>
                <input asp-for="Input.Code" type="hidden" />

                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="ornek@eposta.com" />
                    <label asp-for="Input.Email" class="form-label">E-posta</label>
                    <span asp-validation-for="Input.Email" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Lütfen yeni şifrenizi girin." />
                    <label asp-for="Input.Password" class="form-label">Yeni Şifre</label>
                    <span asp-validation-for="Input.Password" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Yeni şifrenizi tekrar girin." />
                    <label asp-for="Input.ConfirmPassword" class="form-label">Yeni Şifre (Tekrar)</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="w-100 btn btn-primary btn-lg">
                    <i class="bi bi-arrow-repeat me-1"></i> Şifreyi Sıfırla
                </button>
            </form>

            <div class="text-center mt-3">
                <a asp-page="/Account/Login" class="btn btn-link small">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Giriş Sayfasına Dön
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
