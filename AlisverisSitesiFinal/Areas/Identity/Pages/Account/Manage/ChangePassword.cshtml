@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Şifre Değiştir";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<div class="container my-5">
    <div class="card border-0 shadow-lg rounded-4 mx-auto" style="max-width: 520px;">
        <div class="card-body p-4 p-md-5">
            <div class="text-center mb-3">
                <i class="bi bi-key-fill text-success" style="font-size: 2.5rem;"></i>
            </div>
            <h3 class="text-center mb-3 fw-semibold">@ViewData["Title"]</h3>
            <p class="text-muted text-center mb-4">Mevcut şifrenizi değiştirerek hesabınızı güvende tutun.</p>

            <partial name="_StatusMessage" for="StatusMessage" />

            <form id="change-password-form" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger small py-2" role="alert"></div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Lütfen mevcut şifrenizi girin." />
                    <label asp-for="Input.OldPassword" class="form-label">Mevcut Şifre</label>
                    <span asp-validation-for="Input.OldPassword" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-3">
                    <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Lütfen yeni şifrenizi girin." />
                    <label asp-for="Input.NewPassword" class="form-label">Yeni Şifre</label>
                    <span asp-validation-for="Input.NewPassword" class="text-danger small"></span>
                </div>

                <div class="form-floating mb-4">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Yeni şifrenizi tekrar girin." />
                    <label asp-for="Input.ConfirmPassword" class="form-label">Yeni Şifre (Tekrar)</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger small"></span>
                </div>

                <button type="submit" class="w-100 btn btn-lg btn-primary">
                    <i class="bi bi-arrow-repeat me-1"></i> Şifreyi Güncelle
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
