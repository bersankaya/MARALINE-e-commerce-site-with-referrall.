@inject SignInManager<AlisverisSitesiFinal.Models.Kullanici> SignInManager

@{
    var hasExternalLogins = SignInManager.GetExternalAuthenticationSchemesAsync().GetAwaiter().GetResult().Any();
}

<style>
    /* Zarif dikey pills */
    .settings-nav .nav-link {
        border-radius: 12px;
        padding: .6rem .9rem;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: .5rem;
        color: #1f2937; /* slate-800 */
        background: #ffffff;
        border: 1px solid #eef2f7;
        box-shadow: 0 2px 10px rgba(17, 24, 39, .05);
        transition: transform .12s ease, box-shadow .12s ease, background-color .12s ease, color .12s ease;
        margin-bottom: .5rem;
    }

        .settings-nav .nav-link:hover {
            transform: translateY(-1px);
            box-shadow: 0 6px 20px rgba(17, 24, 39, .08);
            color: #0b7a4f; /* markanın yeşiline yakın bir ton */
            border-color: #e6f4ee;
            background: #f8fffc;
            text-decoration: none;
        }

        .settings-nav .nav-link.active,
        .settings-nav .nav-link.active:hover {
            background: linear-gradient(180deg, #f1fff8, #e9fff5);
            border-color: #c8efd9;
            color: #0b7a4f;
            box-shadow: inset 0 0 0 1px #c8efd9, 0 8px 24px rgba(16,185,129,.15);
        }

        .settings-nav .nav-link .icon {
            width: 1.2rem;
            display: inline-flex;
            justify-content: center;
        }
</style>

