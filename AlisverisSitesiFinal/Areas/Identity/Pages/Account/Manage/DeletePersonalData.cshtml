@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Kişisel Verileri Sil";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="container my-5">
    <div class="card border-0 shadow-lg rounded-4 mx-auto" style="max-width: 680px;">
        <div class="card-body p-4 p-md-5">
            <div class="text-center mb-3">
                <i class="bi bi-exclamation-triangle-fill text-danger" style="font-size: 2.2rem;"></i>
            </div>

            <h3 class="text-center fw-semibold mb-3">@ViewData["Title"]</h3>

            <div class="alert alert-warning d-flex align-items-start gap-2 small" role="alert">
                <i class="bi bi-shield-lock mt-1"></i>
                <div>
                    <strong>Bu işlemi onayladığınızda hesabınız kalıcı olarak silinir ve veriler geri getirilemez.</strong>
                </div>
            </div>

            <form id="delete-user" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger py-2 small" role="alert"></div>

                @if (Model.RequirePassword)
                {
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Lütfen şifrenizi giriniz." />
                        <label asp-for="Input.Password" class="form-label">Şifre</label>
                        <span asp-validation-for="Input.Password" class="text-danger small"></span>
                    </div>
                }

                <button class="w-100 btn btn-lg btn-danger">
                    <i class="bi bi-trash3 me-1"></i> Verileri Sil ve Hesabımı Kapat
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
