@page
@model EnableAuthenticatorModel
@{
    ViewData["Title"] = "Doğrulayıcı Uygulamasını Yapılandır";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="container py-3 py-md-4">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-9">

            <div class="card border-0 shadow-sm" style="border-radius:1rem;">
                <div class="card-body p-4 p-md-5">

                    <!-- Başlık -->
                    <div class="d-flex align-items-center gap-3 mb-3">
                        <div class="rounded-circle d-inline-flex align-items-center justify-content-center"
                             style="width:52px;height:52px;background:#e7f1ff;">
                            <!-- Kalkan/2FA simgesi -->
                            <svg xmlns="http://www.w3.org/2000/svg" width="26" height="26" fill="#0d6efd" viewBox="0 0 16 16" aria-hidden="true">
                                <path d="M5.5 0a.5.5 0 0 0-.276.084l-4 2.667A.5.5 0 0 0 1 3.167V6c0 5.255 3.663 8.323 6.293 9.67a.5.5 0 0 0 .414 0C10.337 14.323 14 11.255 14 6V3.167a.5.5 0 0 0-.224-.416l-4-2.667A.5.5 0 0 0 9.5 0h-4z" />
                                <path d="M6.5 10.5l-2-2 .708-.708L6.5 9.086l4.292-4.292.708.708-5 5z" />
                            </svg>
                        </div>
                        <div>
                            <h1 class="h4 mb-0">@ViewData["Title"]</h1>
                            <div class="text-muted small">İki Aşamalı Doğrulama • Authenticator kurulum</div>
                        </div>
                    </div>

                    <div class="alert alert-info d-flex align-items-start gap-2" role="alert">
                        <span class="mt-1" aria-hidden="true">ℹ️</span>
                        <div>
                            Bir doğrulayıcı (Authenticator) uygulaması, girişlerde tek kullanımlık 6 haneli kod üretir.
                            Aşağıdaki adımları izleyerek 2FA’yı etkinleştirin.
                        </div>
                    </div>

                    <!-- Adımlar -->
                    <ol class="ps-3 mb-0">
                        <li class="mb-4">
                            <div class="fw-semibold mb-2">Bir doğrulayıcı uygulama yükleyin</div>
                            <p class="mb-2">
                                Önerilen uygulamalar: <strong>Microsoft Authenticator</strong> veya <strong>Google Authenticator</strong>.
                            </p>
                            <div class="d-flex flex-wrap gap-2">
                                <a class="btn btn-outline-primary btn-sm" href="https://go.microsoft.com/fwlink/?Linkid=825072" target="_blank" rel="noopener">Microsoft Authenticator – Android</a>
                                <a class="btn btn-outline-primary btn-sm" href="https://go.microsoft.com/fwlink/?Linkid=825073" target="_blank" rel="noopener">Microsoft Authenticator – iOS</a>
                                <a class="btn btn-outline-secondary btn-sm" href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2&hl=tr" target="_blank" rel="noopener">Google Authenticator – Android</a>
                                <a class="btn btn-outline-secondary btn-sm" href="https://apps.apple.com/us/app/google-authenticator/id388497605?l=tr" target="_blank" rel="noopener">Google Authenticator – iOS</a>
                            </div>
                        </li>

                        <li class="mb-4">
                            <div class="fw-semibold mb-2">QR kodu tarayın veya anahtarı elle girin</div>

                            <div class="row g-3">
                                <div class="col-12 col-md-6">
                                    <div class="border rounded-3 p-3 text-center">
                                        <div id="qrCode" class="d-flex align-items-center justify-content-center" style="min-height:220px;"></div>
                                        <div id="qrFallback" class="text-muted small d-none">QR kodu oluşturulamadı. Lütfen anahtarı elle girin.</div>
                                        <div id="qrCodeData" data-url="@Model.AuthenticatorUri"></div>
                                    </div>
                                    <div class="form-text mt-2">
                                        QR kodu hakkında yardım için
                                        <a href="https://go.microsoft.com/fwlink/?Linkid=852423" target="_blank" rel="noopener">buradaki kılavuza</a> bakın.
                                    </div>
                                </div>

                                <div class="col-12 col-md-6">
                                    <label class="form-label fw-semibold">Elle giriş anahtarı</label>
                                    <div class="input-group mb-2">
                                        <input id="sharedKey" class="form-control" value="@Model.SharedKey" readonly />
                                        <button type="button" id="copyKeyBtn" class="btn btn-outline-secondary" title="Kopyala" data-bs-toggle="tooltip">
                                            Kopyala
                                        </button>
                                    </div>
                                    <div class="form-text">
                                        Büyük/küçük harf ve boşluklar önemli değildir. Anahtar uygunsa uygulama 6 haneli kod üretir.
                                    </div>
                                </div>
                            </div>
                        </li>

                        <li class="mb-1">
                            <div class="fw-semibold mb-2">Uygulamadaki 6 haneli kodu girin</div>

                            <div class="row">
                                <div class="col-12 col-md-6">
                                    <form id="send-code" method="post" novalidate>
                                        <div class="mb-3">
                                            <label asp-for="Input.Code" class="form-label">Doğrulama Kodu</label>
                                            <input asp-for="Input.Code"
                                                   class="form-control"
                                                   inputmode="numeric"
                                                   pattern="[0-9]{6}"
                                                   maxlength="6"
                                                   autocomplete="one-time-code"
                                                   placeholder="000000" />
                                            <span class="text-muted small">Kod 30 saniyede bir yenilenir.</span>
                                            <span asp-validation-for="Input.Code" class="text-danger"></span>
                                        </div>

                                        <div class="d-flex flex-column flex-md-row gap-2">
                                            <button type="submit" class="btn btn-primary btn-lg px-4">Doğrula</button>
                                            <a asp-page="./ResetAuthenticator" class="btn btn-outline-secondary btn-lg px-4">
                                                Anahtarı Sıfırla
                                            </a>
                                        </div>

                                        <div asp-validation-summary="ModelOnly" class="text-danger mt-3" role="alert"></div>
                                    </form>
                                </div>
                            </div>
                        </li>
                    </ol>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- Projende qrcodejs varsa bu yolu kendi yolunla eşleştir -->
    <script src="~/lib/qrcodejs/qrcode.min.js"></script>
    <script>
        (function () {
            // Bootstrap tooltip
            document.querySelectorAll('[data-bs-toggle="tooltip"]').forEach(function (el) {
                if (window.bootstrap && bootstrap.Tooltip) new bootstrap.Tooltip(el);
            });

            // --- SharedKey Kopyalama: execCommand kullanılmıyor (deprecated uyarısı çözümü) ---
            var copyBtn = document.getElementById('copyKeyBtn');
            var keyInput = document.getElementById('sharedKey');

            async function copyTextModern(text) {
                // Clipboard API yalnızca HTTPS veya localhost içindir
                if (navigator.clipboard && window.isSecureContext) {
                    await navigator.clipboard.writeText(text);
                    return true;
                }
                // Geriye uyumlu fallback: kullanıcıya Ctrl+C yaptır (execCommand YOK)
                window.prompt('Kopyalamak için Ctrl+C yapın ve Enter\'a basın:', text);
                return false;
            }

            if (copyBtn && keyInput) {
                copyBtn.addEventListener('click', async function () {
                    try {
                        var ok = await copyTextModern(keyInput.value);
                        // Görsel geri bildirim
                        var old = copyBtn.innerText;
                        copyBtn.innerText = ok ? 'Kopyalandı' : 'Panoya alındı mı?';
                        setTimeout(function () { copyBtn.innerText = old; }, 1500);
                    } catch (e) {
                        // Sessiz hata: istersen console.log(e) yapabilirsin
                    }
                });
            }

            // --- QR oluşturma ---
            var uriHolder = document.getElementById('qrCodeData');
            var qrBox = document.getElementById('qrCode');
            var failText = document.getElementById('qrFallback');

            if (uriHolder && qrBox) {
                var url = uriHolder.getAttribute('data-url');
                try {
                    if (window.QRCode) {
                        new QRCode(qrBox, { text: url, width: 200, height: 200 });
                    } else {
                        if (failText) failText.classList.remove('d-none');
                        qrBox.innerHTML = '<div class="text-muted small">QR kodu için kütüphane yüklenemedi.</div>';
                    }
                } catch (err) {
                    if (failText) failText.classList.remove('d-none');
                }
            }
        })();
    </script>
}
