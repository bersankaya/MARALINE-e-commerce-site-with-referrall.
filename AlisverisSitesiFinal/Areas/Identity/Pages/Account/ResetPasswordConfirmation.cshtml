@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Şifre Sıfırlama Başarılı";
}

<div class="container my-5">
    <div class="card border-0 shadow-lg rounded-4 mx-auto text-center" style="max-width: 520px;">
        <div class="card-body py-5">
            <div class="mb-3">
                <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
            </div>

            <h1 class="h4 mb-3">@ViewData["Title"]</h1>
            <p class="text-muted mb-4">
                Şifreniz başarıyla sıfırlandı. Artık giriş yapabilirsiniz.
            </p>

            <a asp-page="/Account/Login" class="btn btn-success px-4">
                <i class="bi bi-box-arrow-in-right me-1"></i> Giriş Yap
            </a>

            <div class="mt-3">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-house-door me-1"></i> Ana Sayfa
                </a>
            </div>
        </div>
    </div>
</div>
