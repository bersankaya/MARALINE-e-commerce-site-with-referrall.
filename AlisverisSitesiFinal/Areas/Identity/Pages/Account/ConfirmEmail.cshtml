@page
@model ConfirmEmailModel
@{
    ViewData["Title"] = "E-posta Onayı";

    // Identity'nin default StatusMessage değerlerini TR'ye çevir
    var raw = Model.StatusMessage ?? string.Empty;

    string message =
        raw.Contains("Thank you for confirming your email.", StringComparison.OrdinalIgnoreCase)
            ? "E-posta adresiniz başarıyla doğrulandı."
        : raw.Contains("Error confirming your email.", StringComparison.OrdinalIgnoreCase)
            ? "E-posta doğrulaması sırasında bir hata oluştu."
        : string.IsNullOrWhiteSpace(raw)
            ? "E-posta doğrulama işlemi tamamlandı."
            : raw;

    bool isSuccess = message.Contains("başarıyla", StringComparison.OrdinalIgnoreCase)
                  || message.Contains("tamamlandı", StringComparison.OrdinalIgnoreCase);
}

<div class="container py-4">
    <h1 class="h3 mb-3">@ViewData["Title"]</h1>

    <div class="alert @(isSuccess ? "alert-success" : "alert-danger")" role="alert">
        @message
    </div>

    <div class="mt-3">
        <a asp-page="/Account/Login" class="btn btn-primary btn-sm">Giriş Yap</a>
       @*  <a asp-page="/Account/Manage/Index" class="btn btn-outline-secondary btn-sm">Hesabım</a> *@
    </div>
</div>
