@page
@model LockoutModel
@{
    ViewData["Title"] = "Hesap Kilitlendi";
}

<div class="container py-5 text-center">
    <div class="alert alert-danger shadow-sm mx-auto" style="max-width: 500px; border-radius: 12px;">
        <h1 class="h4 mb-3">
            <i class="bi bi-shield-lock me-2"></i>@ViewData["Title"]
        </h1>
        <p class="mb-2">
            Güvenlik nedeniyle hesabınız geçici olarak kilitlendi.
        </p>
        <p class="text-muted small mb-3">
            Lütfen birkaç dakika sonra tekrar deneyin veya gerekirse şifrenizi sıfırlayın.
        </p>
        <div class="mt-3">
            <a asp-page="/Account/Login" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-box-arrow-in-right me-1"></i> Giriş Sayfasına Dön
            </a>
            <a asp-page="/Account/ForgotPassword" class="btn btn-primary btn-sm">
                <i class="bi bi-key me-1"></i> Şifremi Unuttum
            </a>
        </div>
    </div>
</div>
