@model List<AlisverisSitesiFinal.Models.BonusLog>
@using AlisverisSitesiFinal.Models

@{
    ViewData["Title"] = "Admin Paneli";
    var kazananlar = ViewBag.EnCokKazananlar as List<Kullanici>;
}

<div class="container mt-5">
    <h1 class="text-primary fw-bold mb-4">
        🛠️ Admin Paneli
    </h1>

    <div class="d-flex justify-content-between flex-wrap mb-4 gap-2">
        <a asp-controller="AdminSettings" asp-action="Index" class="btn btn-outline-secondary btn-lg">
            ⚙️ Yönetim Ayarları
        </a>

        <form asp-action="BonuslariSifirlaVeGuncelle" method="post">
            <button type="submit" class="btn btn-danger btn-lg">
                🧹 Bonusları Temizle ve Yeniden Hesapla
            </button>
        </form>

        <a href="/Kategoris" class="btn btn-success d-inline-flex align-items-center gap-2 shadow-sm px-4 py-2 rounded-3">
            <i class="bi bi-tags-fill fs-5"></i>
            <span class="fw-semibold">Kategorileri Yönet</span>
        </a>

        <a href="/ParaCekme/AdminTalepler" class="btn btn-warning d-inline-flex align-items-center gap-2 shadow-sm px-4 py-2 rounded-3">
            <i class="bi bi-cash-stack fs-5"></i>
            <span class="fw-semibold">Para Çekme Taleplerini Yönet</span>
        </a>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success shadow-sm">
            ✅ @TempData["SuccessMessage"]
        </div>
    }

    <hr />

    <h3 class="text-info mt-4 mb-3">🧾 Son 50 Bonus Log Kaydı</h3>
    <div class="table-responsive rounded shadow-sm">
        <table class="table table-bordered table-hover align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>Kullanıcı</th>
                    <th>Tutar</th>
                    <th>Açıklama</th>
                    <th>Tarih</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var log in Model)
                {
                    <tr>
                        <td class="text-break">@log.KullaniciId</td>
                        <td>@log.Tutar.ToString("C")</td>
                        <td class="text-start">@log.Aciklama</td>
                        <td>@log.Tarih.ToString("g")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <h3 class="text-success mt-5 mb-3">🏆 En Çok Kazanan 10 Kullanıcı</h3>
    @if (kazananlar != null && kazananlar.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-sm table-bordered shadow-sm text-center">
                <thead class="table-primary">
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Kazanç</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in kazananlar)
                    {
                        <tr>
                            <td>@user.Ad @user.Soyad</td>
                            <td>@user.Email</td>
                            <td>@user.ToplamKazanilanPara.ToString("C")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">Henüz kazanan kullanıcı yok.</div>
    }
</div>
