@if (Model.SliderUrunler.Any())
{
    // Ürünleri karışık sırayla göstermek için shuffle
    var rnd = new Random();
    var karisikUrunler = Model.SliderUrunler.OrderBy(x => rnd.Next()).ToList();

    <section class="container mb-5">
        <div id="anaSlider"
             class="carousel slide carousel-fade shadow-lg rounded-4 overflow-hidden classy-slider"
             data-bs-ride="carousel"
             data-bs-interval="5000"
             data-bs-touch="true"
             data-bs-pause="hover">

            <!-- Slider göstergeleri -->
            <div class="carousel-indicators">
                @for (int i = 0; i < karisikUrunler.Count; i++)
                {
                    <button type="button"
                            data-bs-target="#anaSlider"
                            data-bs-slide-to="@i"
                            class="@(i == 0 ? "active" : "")"
                            aria-label="Slide @(i + 1)"></button>
                }
            </div>

            <!-- Slider içerikleri -->
            <div class="carousel-inner">
                @for (int i = 0; i < karisikUrunler.Count; i++)
                {
                    var urun = karisikUrunler[i];
                    <div class="carousel-item @(i == 0 ? "active" : "")">
                        <div class="slider-card position-relative overflow-hidden">
                            <img src="@urun.ResimUrl" alt="@urun.Ad" class="d-block w-100 slider-img">

                            <!-- Caption -->
                            <div class="slider-caption d-flex flex-column justify-content-end p-4 p-md-5">
                                <h2 class="fw-bold display-6">@urun.Ad</h2>
                               
                                <a href="/Uruns/Details/@urun.Id" class="btn btn-primary btn-sm rounded-pill px-4 shadow-sm mt-2">
                                    İncele
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Slider kontrolleri -->
            <button class="carousel-control-prev classy-control" type="button" data-bs-target="#anaSlider" data-bs-slide="prev">
                <span class="carousel-control-prev-icon"></span>
            </button>
            <button class="carousel-control-next classy-control" type="button" data-bs-target="#anaSlider" data-bs-slide="next">
                <span class="carousel-control-next-icon"></span>
            </button>
        </div>
    </section>
}

<style>
    /* Genel slider görselleri */
    .slider-img {
        object-fit: cover;
        height: 450px;
        transition: transform 0.5s ease, filter 0.5s ease;
    }

    /* Hover efekti: hafif zoom ve gölge */
    .slider-card:hover .slider-img {
        transform: scale(1.05);
        filter: brightness(0.9);
    }

    /* Caption tasarımı */
    .slider-caption {
        position: absolute;
        bottom: 15%;
        left: 5%;
        background: rgba(0,0,0,0.35);
        border-radius: 0.5rem;
        max-width: 55%;
        color: #fff;
        transition: transform 0.5s ease, opacity 0.5s ease;
    }

    /* Hover animasyonu caption */
    .slider-card:hover .slider-caption {
        transform: translateY(-10px);
        opacity: 1;
    }

    .slider-caption h2 {
        font-size: 2rem;
        font-weight: 700;
    }

    .slider-caption p {
        font-size: 1rem;
    }

    /* Mobil uyumlu */
    @@media (max-width: 768px) {
        .slider-caption

    {
        max-width: 80%;
        bottom: 10%;
        padding: 0.75rem 1rem;
    }

    .slider-caption h2 {
        font-size: 1.5rem;
    }

    .slider-caption p {
        font-size: 0.9rem;
    }

    }

    /* Carousel kontrolleri */
    .carousel-control-prev-icon,
    .carousel-control-next-icon {
        filter: invert(1);
        width: 2rem;
        height: 2rem;
    }

    /* Carousel göstergeleri */
    .carousel-indicators button {
        background-color: #fff;
        opacity: 0.7;
    }

    .carousel-indicators .active {
        opacity: 1;
    }
</style>



