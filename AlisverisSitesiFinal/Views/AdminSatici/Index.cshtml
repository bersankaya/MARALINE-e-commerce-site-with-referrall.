@using AlisverisSitesiFinal.Models.ViewModels
@model List<SaticiListItemVM>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Mağazalar";
    var dict = ViewBag.UrunlerByMagaza as IDictionary<int, List<AdminUrunListeVM>>
               ?? new Dictionary<int, List<AdminUrunListeVM>>();
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />

<div class="container py-4">
    <h1 class="h4 fw-bold mb-3">Mağazalar</h1>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success rounded-3">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger rounded-3">@TempData["Error"]</div>
    }

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-light border">Kayıtlı mağaza bulunamadı.</div>
    }
    else
    {
        foreach (var item in Model)
        {
            var urunler = dict.TryGetValue(item.MagazaId, out var list) ? list : new List<AdminUrunListeVM>();
            var urunList = urunler?.ToList() ?? new List<AdminUrunListeVM>();

            <div class="card border-0 shadow-sm rounded-4 mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between flex-wrap gap-2">
                        <div>
                            <h5 class="mb-1">@item.MagazaAdi</h5>
                            <div class="text-muted small">
                                <i class="bi bi-person me-1"></i>@item.SaticiAdSoyad
                                &nbsp;&nbsp; <i class="bi bi-envelope ms-2 me-1"></i>@item.Email
                            </div>
                            <div class="text-muted small mt-1">
                                <i class="bi bi-calendar3 me-1"></i>@item.OlusturmaTarihi.ToString("dd.MM.yyyy HH:mm")
                            </div>
                            <div class="mt-2 d-flex flex-wrap gap-2">
                                <span class="badge @(item.AktifMi ? "bg-success" : "bg-secondary")">
                                    Mağaza: @(item.AktifMi ? "AKTİF" : "PASİF")
                                </span>
                                <span class="badge bg-primary">Rol: @item.SaticiRolu</span>
                            </div>

                            @* İsteğe bağlı: Vergi/Telefon/IBAN *@
                            @if (!string.IsNullOrWhiteSpace(item.VergiNo) || !string.IsNullOrWhiteSpace(item.Telefon) || !string.IsNullOrWhiteSpace(item.IBAN))
                            {
                                <div class="small text-muted mt-2">
                                    @if (!string.IsNullOrWhiteSpace(item.VergiNo))
                                    {
                                        <span class="me-3">Vergi No: @item.VergiNo</span>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(item.Telefon))
                                    {
                                        <span class="me-3"><i class="bi bi-telephone me-1"></i>@item.Telefon</span>
                                    }
                                    @if (!string.IsNullOrWhiteSpace(item.IBAN))
                                    {
                                        <span><i class="bi bi-credit-card-2-front me-1"></i>@item.IBAN</span>
                                    }
                                </div>
                            }
                        </div>

                        <div class="text-end">
                            <form asp-action="ToggleStore" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.MagazaId" />
                                <button class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-power me-1"></i> @(item.AktifMi ? "Mağaza Pasifleştir" : "Mağaza Aktifleştir")
                                </button>
                            </form>

                            <form asp-action="ToggleSellerRole" method="post" class="d-inline ms-2">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="userId" value="@item.OwnerUserId" />
                                <button class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-people me-1"></i> Aday Yap / Satici Yap
                                </button>
                            </form>

                            @* Yeni: Mağaza Sil *@
                            <form asp-action="DeleteStore" method="post" class="d-inline ms-2" onsubmit="return confirmDeleteStore(@item.MagazaId, '@item.MagazaAdi');">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="id" value="@item.MagazaId" />
                                <button class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash3 me-1"></i> Mağazayı Sil
                                </button>
                            </form>
                        </div>
                    </div>

                    <!-- Ürünler aç/kapa -->
                    <div class="mt-3">
                        <button class="btn btn-outline-primary btn-sm"
                                type="button"
                                onclick="toggleUrunler(@item.MagazaId)">
                            Ürünleri Göster/Gizle
                        </button>


                        <div class="collapse mt-3" id="urunler-@item.MagazaId">
                            @if (urunList.Any())
                            {
                                <!-- Mobil görünüm: sıralı liste (1,2,3...) -->
                                <div class="d-md-none">
                                    <ol class="list-group list-group-numbered">
                                        @for (int i = 0; i < urunList.Count; i++)
                                        {
                                            var u = urunList[i];
                                            <li class="list-group-item border-0 border-bottom">
                                                <div class="d-flex w-100 justify-content-between">
                                                    <h6 class="mb-1">
                                                        <a asp-controller="Uruns" asp-action="Details" asp-route-id="@u.UrunId" class="text-decoration-none">
                                                            @u.UrunAdi
                                                        </a>
                                                    </h6>
                                                    <small class="text-muted">@u.EklenmeTarihi.ToString("dd.MM.yyyy")</small>
                                                </div>
                                                <div class="small text-muted">
                                                    @u.Kategori
                                                </div>
                                                <div class="d-flex gap-3 small mt-1">
                                                    <span>Teklif: @((u.SaticiTeklifFiyati ?? 0m).ToString("C"))</span>
                                                    <span>Admin: @((u.FiyatAdmin ?? 0m).ToString("C"))</span>
                                                    <span>Ref: @((u.FiyatReferansli ?? 0m).ToString("C"))</span>
                                                </div>
                                                <div class="small mt-1">
                                                    <span class="badge @(u.YayindaMi ? "bg-success" : "bg-secondary")">
                                                        @(u.YayindaMi ? "Yayında" : "Bekliyor")
                                                    </span>
                                                </div>
                                            </li>
                                        }
                                    </ol>
                                </div>

                                <!-- Masaüstü görünüm: tablo -->
                                <div class="table-responsive d-none d-md-block">
                                    <table class="table table-sm align-middle">
                                        <thead class="table-light">
                                            <tr>
                                                <th style="width:56px;">#</th>
                                                <th>Ürün</th>
                                                <th>Kategori</th>
                                                <th class="text-end">Teklif</th>
                                                <th class="text-end">Admin</th>
                                                <th class="text-end">Ref. Fiyat</th>
                                                <th>Yayın</th>
                                                <th>Tarih</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @for (int i = 0; i < urunList.Count; i++)
                                            {
                                                var u = urunList[i];
                                                <tr>
                                                    <td class="text-muted">@((i + 1).ToString())</td>
                                                    <td>
                                                        <a asp-controller="Uruns" asp-action="Details" asp-route-id="@u.UrunId">@u.UrunAdi</a>
                                                    </td>
                                                    <td>@u.Kategori</td>
                                                    <td class="text-end">@((u.SaticiTeklifFiyati ?? 0m).ToString("C"))</td>
                                                    <td class="text-end">@((u.FiyatAdmin ?? 0m).ToString("C"))</td>
                                                    <td class="text-end">@((u.FiyatReferansli ?? 0m).ToString("C"))</td>
                                                    <td>
                                                        <span class="badge @(u.YayindaMi ? "bg-success" : "bg-secondary")">
                                                            @(u.YayindaMi ? "Yayında" : "Bekliyor")
                                                        </span>
                                                    </td>
                                                    <td>@u.EklenmeTarihi.ToString("dd.MM.yyyy")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-light border">Bu mağazada ürün bulunamadı.</div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    }
</div>

@section Scripts {
    <!-- Eğer layout zaten Bootstrap JS içeriyorsa bu satırı silebilirsin -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        // Ürün Göster/Gizle işlemi (her zaman çalışır)
        function toggleUrunler(id) {
            var el = document.getElementById('urunler-' + id);
            if (!el) return;

            // Bootstrap yüklüyse API üzerinden toggle
            if (window.bootstrap && typeof bootstrap.Collapse === 'function') {
                var inst = bootstrap.Collapse.getOrCreateInstance(el, { toggle: false });
                inst.toggle();
                return;
            }

            // Bootstrap yoksa basit fallback
            el.classList.toggle('show');
        }

        // Eski fallback'i temizledik, yukarıdaki toggle fonksiyonu artık hepsini kapsıyor.

        // Mağaza Sil onayı
        function confirmDeleteStore(id, name) {
            return confirm(`“${name}” mağazasını silmek istediğinize emin misiniz? Bu işlem geri alınamaz.`);
        }
    </script>
}

