@model AlisverisSitesiFinal.Models.ViewModels.AdminSaticiVM
@{
    ViewData["Title"] = "Satıcı Yönetimi - Yeni Satıcı";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />

<div class="container py-4">
    <div class="d-flex align-items-center justify-content-between flex-wrap gap-2 mb-3">
        <h2 class="mb-0">
            <i class="bi bi-person-plus me-2"></i>Yeni Satıcı Oluştur
        </h2>
        <div class="d-flex gap-2">
            <a asp-controller="AdminSatici" asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Listeye Dön
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success rounded-3"><i class="bi bi-check2-circle me-1"></i>@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger rounded-3"><i class="bi bi-x-circle me-1"></i>@TempData["Error"]</div>
    }

    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body">
            <form asp-action="Create" method="post" class="row g-4">
                @Html.AntiForgeryToken()

                <div class="col-12">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                </div>

                <!-- KULLANICI BİLGİLERİ -->
                <div class="col-12">
                    <h5 class="fw-semibold mb-0"><i class="bi bi-person-badge me-2"></i>Kullanıcı Bilgileri</h5>
                    <hr class="mt-2 mb-3" />
                </div>

                <div class="col-12 col-md-4">
                    <label asp-for="Ad" class="form-label"></label>
                    <input asp-for="Ad" class="form-control" />
                    <span asp-validation-for="Ad" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-4">
                    <label asp-for="Soyad" class="form-label"></label>
                    <input asp-for="Soyad" class="form-control" />
                    <span asp-validation-for="Soyad" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-4">
                    <label asp-for="Email" class="form-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-4">
                    <label asp-for="Sifre" class="form-label"></label>
                    <input asp-for="Sifre" type="password" class="form-control" autocomplete="new-password" />
                    <span asp-validation-for="Sifre" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-4 d-flex align-items-end">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="OnayliSatici" />
                        <label class="form-check-label" asp-for="OnayliSatici"></label>
                    </div>
                    <small class="text-muted ms-2">
                        (İşaretli: <strong>Satici</strong> rolü atanır. Boş: <strong>SaticiAday</strong> atanır.)
                    </small>
                </div>

                <!-- MAĞAZA BİLGİLERİ -->
                <div class="col-12">
                    <h5 class="fw-semibold mb-0"><i class="bi bi-shop-window me-2"></i>Mağaza Bilgileri</h5>
                    <hr class="mt-2 mb-3" />
                </div>

                <div class="col-12 col-md-6">
                    <label asp-for="MagazaAdi" class="form-label"></label>
                    <input asp-for="MagazaAdi" class="form-control" placeholder="Örn: Maraline Official" />
                    <span asp-validation-for="MagazaAdi" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-3">
                    <label asp-for="VergiNo" class="form-label"></label>
                    <input asp-for="VergiNo" class="form-control" placeholder="10/11 hane (opsiyonel)" />
                    <span class="form-text">Doldurulursa tekil olmalı; yalnızca rakamlarla kaydedilir.</span>
                    <span asp-validation-for="VergiNo" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-3">
                    <label asp-for="IBAN" class="form-label"></label>
                    <input asp-for="IBAN" class="form-control" placeholder="TR00 0000 0000 0000 0000 00" />
                    <span asp-validation-for="IBAN" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-4">
                    <label asp-for="Telefon" class="form-label"></label>
                    <input asp-for="Telefon" class="form-control" placeholder="+90..." />
                    <span asp-validation-for="Telefon" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-8">
                    <label asp-for="Adres" class="form-label"></label>
                    <textarea asp-for="Adres" class="form-control" rows="3" placeholder="Mağaza adresi"></textarea>
                    <span asp-validation-for="Adres" class="text-danger"></span>
                </div>

                <div class="col-12 col-md-4 d-flex align-items-end">
                    <div class="form-check">
                        <input class="form-check-input" asp-for="AktifMi" />
                        <label class="form-check-label" asp-for="AktifMi"></label>
                    </div>
                    <small class="text-muted ms-2">
                        (Bu yalnızca <strong>mağaza yayın durumudur</strong>; satıcı rolünü etkilemez.)
                    </small>
                </div>

                <div class="col-12 d-flex gap-2 mt-2">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-save2 me-1"></i>Kaydet
                    </button>
                    <a asp-controller="AdminSatici" asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-list-ul me-1"></i>Listeye Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
