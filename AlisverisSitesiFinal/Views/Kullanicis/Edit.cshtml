@model AlisverisSitesiFinal.Models.Kullanici

@{
    ViewData["Title"] = "Kullanıcı Düzenle";
}

<h2>Kullanıcı Düzenle</h2>

<form asp-action="Edit">
    <!-- Id gönderilir ama değiştirilemez -->
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Ad" class="control-label"></label>
        <input asp-for="Ad" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Soyad" class="control-label"></label>
        <input asp-for="Soyad" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ReferansKodu" class="control-label"></label>
        <input asp-for="ReferansKodu" class="form-control" />
    </div>
    <!-- SponsorId gösterilir ama değiştirilemez -->
    <div class="form-group">
        <label asp-for="SponsorId" class="control-label"></label>
        <input asp-for="SponsorId" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="ToplamHarcama" class="control-label"></label>
        <input asp-for="ToplamHarcama" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ToplamKazanilanPara" class="control-label"></label>
        <input asp-for="ToplamKazanilanPara" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AylikKazanilanPara" class="control-label"></label>
        <input asp-for="AylikKazanilanPara" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="KayitTarihi" class="control-label"></label>
        <input asp-for="KayitTarihi" class="form-control" />
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Kaydet" class="btn btn-primary" />
    </div>
</form>
