@model AlisverisSitesiFinal.Models.ViewModels.MagazaKayitVM
@{
    ViewData["Title"] = "Mağaza Ol";
}
<h2>Mağaza Ol</h2>
<form asp-action="Kayit" method="post" class="mt-3 row g-3">
    <div class="col-md-6">
        <label class="form-label">Ad</label>
        <input asp-for="Ad" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Soyad</label>
        <input asp-for="Soyad" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">E‑posta</label>
        <input asp-for="Email" type="email" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Şifre</label>
        <input asp-for="Sifre" type="password" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Mağaza Adı</label>
        <input asp-for="MagazaAdi" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">Vergi No</label>
        <input asp-for="VergiNo" class="form-control" />
    </div>
    <div class="col-md-6">
        <label class="form-label">IBAN (opsiyonel)</label>
        <input asp-for="IBAN" class="form-control" />
    </div>
    <div class="col-12">
        <label class="form-label">Açıklama</label>
        <textarea asp-for="Aciklama" rows="3" class="form-control"></textarea>
    </div>
    <div class="col-12">
        <button class="btn btn-success">Başvuruyu Gönder ve Kaydol</button>
    </div>
</form>
<partial name="_ValidationScriptsPartial" />
