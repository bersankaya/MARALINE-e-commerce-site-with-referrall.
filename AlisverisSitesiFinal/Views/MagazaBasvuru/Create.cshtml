@model AlisverisSitesiFinal.Models.MagazaBasvurusu
@{
    ViewData["Title"] = "Mağaza Başvurusu";
}
<h2>@ViewData["Title"]</h2>
<form asp-action="Create" method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="MagazaAdi" class="form-label"></label>
        <input asp-for="MagazaAdi" class="form-control" />
        <span asp-validation-for="MagazaAdi" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="VergiNo" class="form-label"></label>
        <input asp-for="VergiNo" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="IBAN" class="form-label"></label>
        <input asp-for="IBAN" class="form-control" />
    </div>
    <div class="mb-3">
        <label asp-for="Aciklama" class="form-label"></label>
        <textarea asp-for="Aciklama" rows="3" class="form-control"></textarea>
    </div>
    <button class="btn btn-success">Başvuruyu Gönder</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
