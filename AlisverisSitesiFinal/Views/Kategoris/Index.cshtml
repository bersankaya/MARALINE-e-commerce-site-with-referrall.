@model IEnumerable<AlisverisSitesiFinal.Models.Kategori>

@{
    ViewData["Title"] = "Kategoriler";
}

<h2>Kategori Listesi</h2>

<a asp-action="Create" class="btn btn-success mb-3">+ Yeni Kategori</a>

<table class="table table-bordered table-striped">
    <thead class="table-light">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var kategori in Model)
        {
            <tr>
                <td>@kategori.Id</td>
                <td>@kategori.Ad</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@kategori.Id" class="btn btn-sm btn-primary">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@kategori.Id" class="btn btn-sm btn-danger">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
