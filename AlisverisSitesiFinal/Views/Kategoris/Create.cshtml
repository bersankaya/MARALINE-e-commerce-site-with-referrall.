@model AlisverisSitesiFinal.Models.Kategori

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
}

<h2 class="mb-4">Yeni Kategori Ekle</h2>

<form asp-action="Create" enctype="multipart/form-data">
    <div class="form-group mb-3">
        <label asp-for="Ad" class="form-label"></label>
        <input asp-for="Ad" class="form-control" />
        <span asp-validation-for="Ad" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label for="ImageFile" class="form-label">Kategori Görseli</label>
        <input type="file" name="ImageFile" class="form-control" />
        <small class="text-muted">Desteklenen formatlar: JPG, PNG. Maksimum 2MB.</small>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
    <a asp-action="Index" class="btn btn-secondary">Geri Dön</a>
</form>
