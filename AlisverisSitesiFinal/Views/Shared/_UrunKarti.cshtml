@model AlisverisSitesiFinal.Models.Urun
@using Microsoft.AspNetCore.Identity
@using AlisverisSitesiFinal.Models
@using AlisverisSitesiFinal.Helpers
@inject UserManager<Kullanici> UserManager

@{
    // Stil anahtarı: önce yeni anahtar, yoksa eskisine düş
    var stilObj = ViewData["ViewKartStili"] ?? ViewData["KartStili"] ?? "urun-karti-standart";
    string kartStili = Convert.ToString(stilObj) ?? "urun-karti-standart";

    var currUser = await UserManager.GetUserAsync(User);
    var gorunecekFiyat = FiyatHelper.GetGorunecekFiyat(currUser, Model);

    // Fiyat metni
    string fiyatMetni = gorunecekFiyat.HasValue
        ? $"₺{gorunecekFiyat.Value.ToString("N0")}"
        : "Fiyatlandırma Bekliyor";

    // Görsel fallback
    string resim = string.IsNullOrWhiteSpace(Model.ResimUrl) ? "/images/placeholder.png" : Model.ResimUrl;

    bool isPrivileged = User.IsInRole("Admin") || User.IsInRole("Satici");
}

<a href="/Uruns/Details/@Model.Id" class="urun-kart-link text-decoration-none d-block h-100">
    <div class="card urun-karti shadow-sm h-100 rounded-4 border-0 overflow-hidden @kartStili">
        <div class="position-relative">

            <!-- ÜRÜN RESMİ (yükseklik sabit) -->
            <div class="urun-resim-wrapper bg-light text-center p-3" style="height:220px; display:flex; align-items:center; justify-content:center;">
                <img src="@resim" class="img-fluid urun-resim" alt="@Model.Ad" style="max-height:100%; object-fit:contain;" />
            </div>

            <!-- ROZETLER -->
            @* Taslak / Fiyat Bekliyor durumları aynı kalsın *@
            @if (!Model.YayindaMi)
            {
                <span class="badge bg-secondary position-absolute top-0 start-0 m-2">Taslak</span>
            }
            else if (Model.Durum == UrunDurum.AdminFiyatBekliyor)
            {
                <span class="badge bg-warning text-dark position-absolute top-0 start-0 m-2">Fiyat Bekliyor</span>
            }
            else
            {
                @* Yayında ise "Yayında" yerine kart stiline göre rozet göster *@
                @if (kartStili == "populer")
                {
                    <span class="badge bg-success position-absolute top-0 start-0 m-2">Popüler</span>
                }
                else if (kartStili == "avantajli")
                {
                    <span class="badge bg-danger position-absolute top-0 start-0 m-2">Avantajlı</span>
                }
                else if (kartStili == "coksatan")
                {
                    <span class="badge bg-danger position-absolute top-0 start-0 m-2">Çok Satan</span>
                }
                else
                {
                    <span class="badge bg-success position-absolute top-0 start-0 m-2">Yayında</span>
                }
            }
        </div>

        <!-- GÖVDE: esnek kolon, fiyat en altta -->
        <div class="card-body d-flex flex-column">

            <!-- Başlık + açıklama: sabit yükseklikli alan -->
            <div class="text-center">
                <!-- Başlık: 2 satıra sabitle -->
                <h5 class="card-title fw-semibold text-dark"
                    style="
                        display:-webkit-box;
                        -webkit-line-clamp:2;
                        -webkit-box-orient:vertical;
                        overflow:hidden;
                        line-height:1.25;
                        min-height:calc(1.25em * 2);
                        margin-bottom:.35rem;">
                    @Model.Ad
                </h5>

                <!-- Açıklama: 3 satıra sabitle -->
                <p class="card-text text-muted small mb-0"
                   style="
                        display:-webkit-box;
                        -webkit-line-clamp:3;
                        -webkit-box-orient:vertical;
                        overflow:hidden;
                        line-height:1.4;
                        min-height:calc(1.4em * 3);">
                    @(Model.Aciklama ?? "")
                </p>
            </div>

            <!-- Spacer: fiyat alanını aşağı it -->
            <div class="flex-grow-1"></div>

            <!-- FİYAT ALANI (daima kartın altına oturur) -->
            <div class="text-center mt-2">
                @if (gorunecekFiyat.HasValue)
                {
                    <div class="fw-bold text-success fs-5">@fiyatMetni</div>
                }
                else
                {
                    <div class="fw-bold text-muted fs-6">@fiyatMetni</div>
                }

                @* Admin/Satıcı bilgilendirme *@
                @if (isPrivileged)
                {
                    <div class="small text-muted mt-1">
                        Admin: @(Model.FiyatAdmin?.ToString("C0") ?? "-")
                        | Ref: @(Model.FiyatReferansli?.ToString("C0") ?? "-")
                        | Teklif: @(Model.SaticiTeklifFiyati?.ToString("C0") ?? "-")
                    </div>
                }
            </div>
        </div>
    </div>
</a>
