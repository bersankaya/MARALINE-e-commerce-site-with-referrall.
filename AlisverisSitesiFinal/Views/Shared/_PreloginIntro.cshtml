<script>
    (function () {
        const KEY_LOCAL  = "maraline_intro_hide_forever";
        const KEY_SESS   = "maraline_intro_hide_session";
        const el         = document.getElementById('introModal');
        if (!el || typeof bootstrap === 'undefined') return;

        window.MLN_OPEN_INTRO = function() {
            sessionStorage.removeItem(KEY_SESS);
            const m = new bootstrap.Modal(el, { backdrop: 'static' });
            m.show();
        };

        const hideForever = !!localStorage.getItem(KEY_LOCAL);
        const hideSession = !!sessionStorage.getItem(KEY_SESS);

        if (!hideForever && !hideSession) {
            const modal = new bootstrap.Modal(el, { backdrop: 'static' });
            modal.show();

            const btnClose   = document.getElementById('mlnClose');
            const btnClose2  = document.getElementById('mlnClose2');
            const linkNever  = document.getElementById('mlnNever');

            const closeForSession = () => {
                sessionStorage.setItem(KEY_SESS, '1');
                modal.hide();
            };
            const closeForever = (e) => {
                e?.preventDefault();
                localStorage.setItem(KEY_LOCAL, '1');
                sessionStorage.removeItem(KEY_SESS);
                modal.hide();
            };

            btnClose?.addEventListener('click', closeForSession);
            btnClose2?.addEventListener('click', closeForSession);
            linkNever?.addEventListener('click', closeForever);
        }
    })();
</script> *@
